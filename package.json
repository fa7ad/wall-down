{
  "name": "wall-down",
  "version": "1.0.0",
  "description": "Download wallpapers based on reddit",
  "main": "app/index.html",
  "scripts": {
    "start": "nw app",
    "postinstall": "cd app && npm install",
    "build": "cross-env NODE_ENV=production webpack --progress --colors",
    "watch": "nodemon -w webpack.config.js --exec 'webpack --watch --colors --progress'",
    "package": "node build",
    "start:clean": "webpack --progress --colors && nw app"
  },
  "repository": {
    "url": "git@github.com:fa7ad/wall-down.git",
    "type": "git"
  },
  "bugs": {
    "url": "https://github.com/fa7ad/wall-down/issues"
  },
  "keywords": [
    "download",
    "wallpaper",
    "reddit",
    "nwjs"
  ],
  "homepage": "https://github.com/fa7ad/wall-down#readme",
  "author": "Fahad Hossain <8bit.demoncoder@gmail.com> (http://fahad.gq/)",
  "license": "MIT",
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-eslint": "^10.0.2",
    "babel-loader": "^6.4.1",
    "babel-plugin-transform-decorators-legacy": "^1.3.5",
    "babel-polyfill": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-1": "^6.24.1",
    "cross-env": "^5.2.0",
    "css-loader": "^0.28.11",
    "cssnano": "^4.1.10",
    "eslint": "^5.16.0",
    "eslint-config-standard": "^7.1.0",
    "eslint-config-standard-react": "^7.0.2",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.14.2",
    "eslint-plugin-standard": "^4.0.0",
    "extract-text-webpack-plugin": "^1.0.1",
    "node-sass": "^3.10.1",
    "nw": "^0.39.2",
    "nw-builder": "^3.5.7",
    "postcss-loader": "^3.0.0",
    "sass-loader": "^4.1.1",
    "style-loader": "^0.23.1",
    "webpack": "^1.15.0"
  }
}
