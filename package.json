{
  "name": "wall-down",
  "version": "1.0.0",
  "description": "Download wallpapers based on reddit",
  "main": "app/index.html",
  "scripts": {
    "start": "nw app",
    "postinstall": "cd app && npm install",
    "build": "cross-env NODE_ENV=production webpack --progress --colors",
    "watch": "nodemon -w webpack.config.js --exec 'webpack --watch --colors --progress'",
    "package": "node build",
    "start:clean": "webpack --progress --colors && nw app"
  },
  "repository": {
    "url": "git@github.com:fa7ad/wall-down.git",
    "type": "git"
  },
  "bugs": {
    "url": "https://github.com/fa7ad/wall-down/issues"
  },
  "keywords": [
    "download",
    "wallpaper",
    "reddit",
    "nwjs"
  ],
  "homepage": "https://github.com/fa7ad/wall-down#readme",
  "author": "Fahad Hossain <8bit.demoncoder@gmail.com> (http://fahad.gq/)",
  "license": "MIT",
  "devDependencies": {
    "babel-core": "^6.17.0",
    "babel-eslint": "^7.0.0",
    "babel-loader": "^6.2.5",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-polyfill": "^6.16.0",
    "babel-preset-es2015": "^6.16.0",
    "babel-preset-react": "^6.16.0",
    "babel-preset-stage-1": "^6.16.0",
    "cross-env": "^3.1.3",
    "css-loader": "^0.25.0",
    "cssnano": "^3.7.7",
    "eslint": "^4.18.2",
    "eslint-config-standard": "^6.2.0",
    "eslint-config-standard-react": "^4.2.0",
    "eslint-plugin-promise": "^3.3.0",
    "eslint-plugin-react": "^7.13.0",
    "eslint-plugin-standard": "^2.0.1",
    "extract-text-webpack-plugin": "^1.0.1",
    "node-sass": "^3.10.1",
    "nw": "^0.39.1",
    "nw-builder": "^3.1.2",
    "postcss-loader": "^1.0.0",
    "sass-loader": "^4.0.2",
    "style-loader": "^0.13.1",
    "webpack": "^1.13.2"
  }
}
