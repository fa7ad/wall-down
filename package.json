{
  "name": "wall-down",
  "version": "1.0.0",
  "description": "Download wallpapers based on reddit",
  "main": "app/index.html",
  "scripts": {
    "start": "nw app",
    "postinstall": "cd app && npm install",
    "build": "cross-env NODE_ENV=production webpack --progress",
    "watch": "nodemon -w webpack.config.js --exec 'webpack --watch --progress'",
    "package": "node package",
    "start:clean": "webpack --progress && nw app"
  },
  "keywords": [
    "download",
    "wallpaper",
    "reddit",
    "nwjs"
  ],
  "homepage": "https://github.com/fa7ad/wall-down#readme",
  "license": "MIT",
  "author": "Fahad Hossain <8bit.demoncoder@gmail.com> (http://fahad.gq/)",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/fa7ad/wall-down.git"
  },
  "bugs": {
    "url": "https://github.com/fa7ad/wall-down/issues"
  },
  "devDependencies": {
    "babel-preset-es2015": "^6.14.0",
    "nw": "^0.17.1",
    "extract-text-webpack-plugin": "^1.0.1",
    "cssnano": "^3.7.4",
    "postcss-loader": "^0.13.0",
    "css-loader": "^0.25.0",
    "babel-polyfill": "^6.13.0",
    "nw-builder": "^3.0.0",
    "babel-core": "^6.14.0",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "node-sass": "^3.9.0",
    "webpack": "^1.13.2",
    "nodemon": "^1.10.2",
    "babel-preset-stage-1": "^6.13.0",
    "style-loader": "^0.13.1",
    "cross-env": "^2.0.1",
    "sass-loader": "^4.0.2",
    "babel-loader": "^6.2.5",
    "babel-preset-react": "^6.11.1"
  }
}
